@import "normalize.styl"
@import "font.styl"
fondo= #FAFAFA
gris-claro= #98979C
negro= #262626
grisclaro = #515151
gris-nav=#666666
html
	height 100%
body
	
		font-size 16px
		background fondo
		height 100%
.container
	margin 16px auto 0
	
	a
		text-decoration none
	
	figure
		margin 0
	footer
		background grisclaro
		color rgba(white,0.6)
		text-align center
		
		h3
			font-size 14px
			font-weight normal
			margin 0
			padding 1.3em
			strong
				display block
				margin 0
	header
		color gris-claro
		overflow hidden
		.logo1
			
			width 280px
			a
				img
					height 80px
					width 272px

		.logo2
			top 20px
			right 50px

			a
				img
					height 50px
					width  53px
		.titular
			margin 0 150px 0 100px
			top 25px
			left 40%
			.titulo
				font-size 35px
				margin 0
				padding 0
				

	img 
	nav
		background  grisclaro
		
		box-shadow 0 4px 4px rgba(0, 0, 0, 0.3 )
		z-index 1

		padding 1px


		&:before
			border-bottom 20px  solid transparent
			border-left 7px solid gris-claro
			border-top 20px solid transparent
			content ""
			left 0
			position absolute
			top 0
		&:after
			border-bottom 20px  solid transparent
			border-right 7px solid gris-claro 
			border-top 20px solid transparent
			content ""
			right 0
			position absolute
			top 0

		.menu
			text-align center
			margin 0
			padding-bottom 3px
			
								
			li
				display inline-block
				a 
					color white
					background grisclaro
					display inline-block
					margin 0 1em
					padding .5em
					padding-left 1.5em
					padding-right 1.5em


	
.canvas
	h2
		text-align center
	.ca
		margin-left auto !important
		margin-right auto !important
		width 500px


.left
	float left
.right
	float right
.relative
	position relative
.absolute
	position absolute